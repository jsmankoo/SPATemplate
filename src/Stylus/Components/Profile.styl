.Profile
  relative()
  -webkit-clip-path: polygon(100% 0, 100% 93%, 50% 100%, 0 93%, 0 0);
  clip-path: polygon(100% 0, 100% 93%, 50% 100%, 0 93%, 0 0);
  overflow: hidden
  +below(767px)
    size 100% 750px
  +above(768px)
    size 100% 875px
  .BGTint
    background-color rgba(white, 0.85)
    size 100% 100%
    .Wrapper
      align(v)
      size 100% auto
      .Name
        center(1024px)
        text-align: center
        h2
          font-family: headFont
          h2()
          font-weight: 400
          font-size: 33px
          color grey
          letter-spacing: 3px
          +below(767px)
            margin auto
            font-size: 22px
            font-weight: 400
      .Info
        center(1024px)
        padding 0px 20px
        color black
        .Mobile
          text-align: center
          .PicWrapper
            .Pic
              display: block
              margin: 25px auto
              size 200px 200px
              max-width: 100%
          .Paragraph
            h1
              h1()
            h2
              h2()
            h3
              h3()
            h4
              h4()
            h5
              h5()
            h6
              h6()
            p
              normal()
              font-size: 15px
              margin 10px auto
              line-height: 20px
            strong
              font-weight: 600
            em
              font-style: italic

        .Tablet
          .PicWrapper
            column(1/3)
            .Pic
              display: block
              margin: auto;
              size 280px 410px
              max-width: 100%
          .Paragraph
            column(2/3)
            relative top -20px
            h1
              h1()
            h2
              h2()
            h3
              h3()
            h4
              h4()
            h5
              h5()
            h6
              h6()
            p
              normal()
              font-size: 19px
              margin 20px auto
              line-height: 30px
            strong
              font-weight: 600
            em
              font-style: italic
