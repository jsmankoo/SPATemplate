.Profile
  relative()
  size 100% auto
  -webkit-clip-path: polygon(100% 0, 100% 93%, 50% 100%, 0 93%, 0 0);
  clip-path: polygon(100% 0, 100% 93%, 50% 100%, 0 93%, 0 0);
  overflow: hidden
  .BGTint
    background-color rgba(white, 0.75)
    size 100% 100%
    .Wrapper
      align(v)
      size 100% auto
      .Name
        center(1024px)
        text-align: center
        h2
          h2()
          font-family: headFont
          font-size: 33px
          +below(767px)
            font-size: 25px
      .Info
        center(1024px)
        padding 0px 20px
        .Mobile
          text-align: center
          .PicWrapper
            .Pic
              size 280px 280px
              max-width: 100%
          .Paragraph
            h1
              h1()
            h2
              h2()
            h3
              h3()
            h4
              h4()
            h5
              h5()
            h6
              h6()
            p
              normal()
              font-size: 15px
              margin 10px auto
            strong
              font-weight: 600
            em
              font-style: italic

        .Tablet
          .PicWrapper
            column(1/3)
            .Pic
              display: block
              margin: auto;
              size 280px 410px
              max-width: 100%
          .Paragraph
            column(2/3)
            // relative top -20px
            h1
              h1()
            h2
              h2()
            h3
              h3()
            h4
              h4()
            h5
              h5()
            h6
              h6()
            p
              normal()
              font-size: 19px
              margin 20px auto
            strong
              font-weight: 600
            em
              font-style: italic
