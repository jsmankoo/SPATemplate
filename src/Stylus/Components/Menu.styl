.Menu
  .Mobile
    z-index: 10000
    overflow: scroll
    display: block
    fixed top 50px left 0px
    size 100% auto
    background-color: NavBG
    .Category
      size 100% auto
      relative()
      .CategoryName
        relative()
        display: block
        size 100% auto
        cursor: pointer
        &:hover
        &:active
          h5
          i
          a
            color black
        h5
          display: block
          font-family: headFont
          font-size: 20px
          color white
          padding 10px 20px
        i
          align(v)
          right 20px
          color white
        a
          display: block
          font-family: headFont
          font-size: 20px
          color white
          padding 10px 20px
      .SubCategories
        display: block
        size 100% auto
        overflow: hidden
        .SubCategory
          relative()
          display: block
          size 100% 40px
          a
            display: block
            size 100% auto
            align(v)
            left 40px
            color white
            hover-color black true
    .Border
      border-bottom: 1px solid black

  .Tablet
    z-index: 10000
    display: block
    overflow: hidden
    fixed top 50px right 0px
    size auto 100%
    background-color: NavBG
    .Close
      relative()
      size 100% 50px
      i
        align(v)
        cursor: pointer
        font-size 30px
        right 20px
        color white
        hover-color black true
        +below(767px)
          font-size 25px
    .Category
      size 100% auto
      relative()
      .CategoryName
        relative()
        size 100% 50px
        h5
          align(v)
          left 20px
          font-family: headFont
          font-size: 20px
          color white
        a
          align(v)
          left 20px
          font-family: headFont
          font-size: 20px
          color white
          hover-color black true
          cursor pointer
      .SubCategories
        .SubCategory
          size 100% 40px
          relative()
          a
            align(v)
            left 40px
            cursor: pointer
            font-size: 16px
            color white
            hover-color black true
    .Border
      border-bottom: 1px solid black
      size 150px 1px
      margin-left 20px
