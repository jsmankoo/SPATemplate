          align(b)
          h2()
          margin auto
          font-weight: 400
        a
          align(v)
          right 25px
          border 1px solid grey
          padding 10px 15px
          color grey
          &:hover
          &:focus
            color black
            border 1px solid black
      .Properties
        relative()
        size 100% 375px
        .Property
          display: block
          padding 0px 12.5px
          margin auto
          .Pic
            display: block
            size 440px 285px
            max-width: 100%
            margin auto
          .Address
            display: block
            size 440px auto
            max-width: 100%
            margin auto
            text-align: left
            color black
            font-size 15px
            font-weight: 600
            padding 15px 0px
            letter-spacing: 1px
            font-family: headFont
          .Price
            display: block
            size 440px auto
            max-width: 100%
            margin auto
            text-align: left
            color black
            font-size 15px
            font-weight: 600
            padding 0px 0px
            letter-spacing: 1px
            font-family: headFont


