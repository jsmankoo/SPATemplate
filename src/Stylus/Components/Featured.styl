.Featured
  size 100% auto
  overflow: hidden
  .Controls
    i
      cursor: pointer
      padding 5px
      color grey
      font-size 14px
      hover-color black true
      &.active
        color black
  .Mobile
    relative()
    size 100% 100%
    .Wrapper
      align(b)
      center()
      size 100% auto
      text-align: center
      .Headline
        relative()
        font-family: headFont
        h2
          h2()
          margin auto
          font-size: 25px
          font-weight: 400
      .Search
        font-family: headFont
        a
          display: block
          font-size: 14px
          margin 25px auto
          size 180px auto
          padding 10px 15px
          color grey
          border 1px solid grey
          &:hover
          &:focus
            color black
            border 1px solid black
      .Properties
        relative()
        size 100% 375px
        white-space: nowrap
        overflow: hidden
        .Property
          display: block
          padding 0px
          margin auto
          .Pic
            display: block
            size 440px 285px
            max-width: 100%
            margin auto
          .Address
            display: block
            size 440px auto
            max-width: 100%
            margin auto
            text-align: center
            color black
            font-size 14px
            font-weight: 600
            padding 15px 20px
            font-family: headFont
          .Price
            display: block
            size 440px auto
            max-width: 100%
            margin auto
            text-align: center
            color black
            font-size 14px
            font-weight: 600
            padding 0px 20px
            letter-spacing: 1px
            font-family: headFont


